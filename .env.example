# ===========================================
# VOICE CHATBOT CONFIGURATION
# ===========================================
# Copy this file to .env and update the values

# ===========================================
# REQUIRED: Google Gemini AI API Key
# ===========================================
# Get your free API key from: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key_here

# ===========================================
# Flask Application Settings
# ===========================================
# Use 'development' for local testing, 'production' for deployment
FLASK_ENV=development

# Set to True for debugging, False in production
DEBUG=True

# Web server port and host settings
PORT=5000
HOST=0.0.0.0

# ===========================================
# Database Configuration (SQLite by default)
# ===========================================
# The default SQLite setting works out of the box
DATABASE_URL=sqlite:///instance/chatbot.db

# ===========================================
# Security Settings
# ===========================================
# Change this to a random secret key in production!
SECRET_KEY=change_this_secret_key_in_production_use_random_string

# ===========================================
# Voice Processing Settings
# ===========================================
TTS_PROVIDER=gtts
SPEECH_RECOGNITION_TIMEOUT=10
AUDIO_MAX_DURATION=30

# ===========================================
# Session Management
# ===========================================
SESSION_TIMEOUT_HOURS=24
PERMANENT_SESSION_LIFETIME=86400

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/chatbot.log

# ===========================================
# Optional: Redis Configuration
# ===========================================
# Uncomment if using Redis for session storage
# REDIS_URL=redis://redis:6379/0

# ===========================================
# Optional: Email Notifications
# ===========================================
# Uncomment and configure if you want error notifications
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password
# MAIL_USE_TLS=True

# ===========================================
# Development Settings (ignore in production)
# ===========================================
# FLASK_ENV=development
# FLASK_DEBUG=True
